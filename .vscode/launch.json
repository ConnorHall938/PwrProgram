{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/apps/pwrprogram/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--config",
                "${workspaceFolder}/apps/pwrprogram/jest.config.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/apps/pwrprogram",
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceRoot}/apps/pwrprogram/node_modules/.bin/ts-node",
            "runtimeArgs": [],
            "program": "${workspaceFolder}\\apps\\pwrprogram\\src\\index.ts"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program with Nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceRoot}/apps/pwrprogram/node_modules/.bin/nodemon",
            "runtimeArgs": [
                "--exec",
                "${workspaceRoot}/apps/pwrprogram/node_modules/.bin/ts-node"
            ],
            "program": "${workspaceFolder}\\apps\\pwrprogram\\src\\index.ts"
        }
    ]
}