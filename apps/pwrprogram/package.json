{
   "name": "@pwrprogram/api",
   "version": "1.0.0",
   "description": "PwrProgram - Comprehensive fitness program management API",
   "type": "commonjs",
   "devDependencies": {
      "@types/bcrypt": "^6.0.0",
      "@types/cors": "^2.8.19",
      "@types/express-session": "^1.18.2",
      "@types/jest": "^30.0.0",
      "@types/node": "^24.1.0",
      "@types/supertest": "^6.0.3",
      "@typescript-eslint/eslint-plugin": "^7.0.0",
      "@typescript-eslint/parser": "^7.0.0",
      "eslint": "^9.0.0",
      "eslint-plugin-import": "^2.29.0",
      "jest": "^30.0.5",
      "nodemon": "^3.1.10",
      "prettier": "^3.3.0",
      "sqlite3": "^5.1.7",
      "supertest": "^7.1.4",
      "ts-jest": "^29.4.1",
      "ts-node": "10.9.2",
      "typescript": "5.8.3"
   },
   "dependencies": {
      "@pwrprogram/shared": "workspace:*",
      "bcrypt": "^6.0.0",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.14.2",
      "class-validator-jsonschema": "^5.0.0",
      "connect-typeorm": "^2.0.0",
      "cookie-parser": "^1.4.7",
      "cors": "^2.8.5",
      "dotenv": "^17.2.3",
      "express": "^5.1.0",
      "express-rate-limit": "^8.2.1",
      "express-session": "^1.18.2",
      "helmet": "^8.1.0",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.14",
      "swagger-ui-express": "^5.0.1",
      "typeorm": "0.3.20",
      "uuid": "^11.1.0",
      "winston": "^3.18.3"
   },
   "scripts": {
      "start": "node dist/index.js",
      "start:dev": "ts-node src/index.ts",
      "dev": "nodemon src/index.ts",
      "build": "tsc",
      "build:clean": "rm -rf dist && pnpm build",
      "typeorm": "typeorm-ts-node-commonjs",
      "migration:generate": "typeorm-ts-node-commonjs migration:generate",
      "migration:run": "typeorm-ts-node-commonjs migration:run",
      "migration:revert": "typeorm-ts-node-commonjs migration:revert",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "test:ci": "jest --ci --coverage --maxWorkers=2",
      "openapi:print": "ts-node scripts/print-openapi.ts",
      "lint": "eslint --ext .ts ./src ../../packages/shared/src",
      "lint:fix": "pnpm lint --fix",
      "format": "prettier --write \"**/*.{ts,js,json,md}\"",
      "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
      "typecheck": "tsc --noEmit",
      "validate": "pnpm typecheck && pnpm lint && pnpm test"
   }
}
